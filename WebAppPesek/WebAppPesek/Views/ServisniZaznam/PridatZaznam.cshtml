@using DataAccess.Model
@model ServisniZaznam
@{
    ViewBag.Title = "PridatZaznam";
}

<h2 class="mt-4">Přidat servisní záznam</h2>

@using (Html.BeginForm("Vytvorit", "ServisniZaznam", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @InputExtensions.Hidden(Html, "vozidloId", ViewBag.Vozidlo)

    <div class="form-group">
        <label>Účel</label>
        @Html.TextBoxFor(a => a.Ucel, new { @class = "form-control col-sm-6" })
        @Html.ValidationMessageFor(a => a.Ucel, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Cena</label>
        @Html.TextBoxFor(a => a.Cena, new { @class = "form-control col-sm-6" })
        @Html.ValidationMessageFor(a => a.Cena, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Přidat záznam</button>
}
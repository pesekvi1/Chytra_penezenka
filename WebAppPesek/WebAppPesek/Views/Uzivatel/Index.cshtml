@using DataAccess.Model

@{
    ViewBag.Title = "Index";
}

<h2 class="mt-4">Výpis uživatelů</h2>

@Html.ActionLink("Přidat uživatele", "PridatUzivatele", "Uzivatel")

<div class="table-responsive">
    <table class="table table-bordered table-hover text-center table-sm">
        <thead>
            <tr>
                <th>Identifikátor</th>
                <th>Jméno</th>
                <th>Příjmení</th>
                <th>Role</th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Uzivatel u in ViewBag.Uzivatele)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Jmeno</td>
                    <td>@u.Prijmeni</td>
                    <td>@u.Role.Popis</td>
                    <td class="text-justify">
                        <a class="icon-link" href="@Url.Action("Editace", "Uzivatel", new {id = u.Id})">
                            <span class="fa fa-lg fa-edit icon-orange"></span>
                        </a>
                        <a class="icon-link" href="@Url.Action("Odstranit", "Uzivatel", new {id = u.Id})" onclick="return confirm('Přejete si opravdu smazat uživatele @u.Jmeno @u.Prijmeni?')">
                            <span class="fa fa-lg fa-trash icon-red"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
